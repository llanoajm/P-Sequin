    <script>
        // JavaScript for adding strand inputs dynamically
        document.getElementById('addStrand').addEventListener('click', function() {
            let newStrandInput = document.createElement('div');
            newStrandInput.innerHTML = `<label for="strand_name">Strand Name:</label>
                                        <input type="text" name="strand_name" id="strand_name" class="form-control" required>
                                        <label for="strand_domains">Strand Domains (comma-separated):</label>
                                        <input type="text" name="strand_domains" id="strand_domains" class="form-control" required>`;
            document.getElementById('strand-inputs').appendChild(newStrandInput);
        });

        // JavaScript for adding complex inputs dynamically
        document.getElementById('addComplex').addEventListener('click', function() {
            let newComplexInput = document.createElement('div');
            newComplexInput.innerHTML = `<label for="complex_name">Complex Name:</label>
                                         <input type="text" name="complex_name" id="complex_name" class="form-control" required>
                                         <label for="complex_strands">Complex Strands (comma-separated):</label>
                                         <input type="text" name="complex_strands" id="complex_strands" class="form-control" required>`;
            document.getElementById('complex-inputs').appendChild(newComplexInput);
        });
    </script>
